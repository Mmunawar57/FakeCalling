<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grayish_gradient"
    tools:context=".activity.SetTimeActvity">


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:elevation="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/BackIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:fontFamily="@font/montserat"
            android:text="Set Time"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintVertical_chainStyle="spread">

        <TextView
            android:id="@+id/t1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/montserat"
            android:gravity="center"
            android:text="10s"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t2"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/montserat"
            android:gravity="center"
            android:text="30s"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t3"
            app:layout_constraintStart_toEndOf="@id/t1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/montserat"
            android:gravity="center"
            android:text="1m"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t4"
            app:layout_constraintStart_toEndOf="@id/t2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/montserat"
            android:gravity="center"
            android:text="2m"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/t3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@id/done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <TextView
            android:id="@+id/t5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/montserat"
            android:gravity="center"
            android:text="5m"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t6"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/t6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/montserat"
            android:gravity="center"
            android:text="30m"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/t7"
            app:layout_constraintStart_toEndOf="@id/t5"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/t7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/montserat"
            android:gravity="center"
            android:text="1h"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Now"
            app:layout_constraintStart_toEndOf="@id/t6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Now"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/montserat"
            android:gravity="center"
            android:text="Now"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/t7"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/done"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="0dp"

        android:layout_height="50dp"
        android:layout_marginVertical="50dp"
        android:backgroundTint="@color/redish_btn"
        android:elevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/settime_nativeAdd"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserat"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:id="@+id/settime_nativeAdd"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_margin="15dp"
        android:background="@drawable/frame_custom_layout_ads"
        android:backgroundTint="#0C1723"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/done" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />


</androidx.constraintlayout.widget.ConstraintLayout>